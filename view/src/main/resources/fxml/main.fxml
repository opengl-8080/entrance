<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@base.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="entrance.view.javafx.window.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="編集">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#openTagMaintenance" text="タグメンテナンス" />
                  <MenuItem mnemonicParsing="false" onAction="#openCategorizationWindow" text="分類" />
              </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.35" BorderPane.alignment="CENTER">
         <items>
            <SplitPane dividerPositions="0.7" orientation="VERTICAL">
               <items>
                  <VBox>
                     <children>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#search" text="検索" />
                        <TextField fx:id="tagFilterTextField" />
                        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                           <content>
                              <FlowPane fx:id="tagsFlowPane" hgap="10.0" styleClass="panel" vgap="10.0" />
                           </content>
                           <contextMenu>
                              <ContextMenu>
                                <items>
                                  <MenuItem mnemonicParsing="false" onAction="#reloadTags" text="タグを再読み込み" />
                                </items>
                              </ContextMenu>
                           </contextMenu>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <ScrollPane fitToHeight="true" fitToWidth="true">
                     <content>
                        <ListView fx:id="selectedTagsListView" />
                     </content>
                  </ScrollPane>
               </items>
            </SplitPane>
            <ScrollPane fitToHeight="true" fitToWidth="true">
               <content>
                  <FlowPane fx:id="thumbnailsPane" hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="panel" vgap="10.0" />
               </content>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="openImageMenuItem" mnemonicParsing="false" onAction="#openImage" text="開く" />
                        <MenuItem mnemonicParsing="false" onAction="#deleteImage" text="削除" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </ScrollPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
