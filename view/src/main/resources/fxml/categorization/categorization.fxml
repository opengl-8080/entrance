<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.35" prefHeight="600.0" prefWidth="900.0" stylesheets="@../base.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="entrance.view.javafx.window.categorization.CategorizationController">
    <items>
        <SplitPane orientation="VERTICAL">
            <items>
                <VBox>
                    <children>
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#search" text="検索" />
                        <fx:include fx:id="tagSelect" source="../tag/tag-select-form.fxml" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
      <SplitPane dividerPositions="0.8" orientation="VERTICAL">
         <items>
              <ScrollPane fitToHeight="true" fitToWidth="true">
               <content>
                  <VBox fx:id="imagesVBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="panel" />
               </content>
               <contextMenu>
                      <ContextMenu>
                          <items>
                              <MenuItem mnemonicParsing="false" onAction="#openCategorizeTagWindow" text="タグ編集" />
                        <MenuItem mnemonicParsing="false" onAction="#openViewer" text="表示" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#clearImageSelect" text="選択を解除" />
                          </items>
                      </ContextMenu>
               </contextMenu>
              </ScrollPane>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="割り当てられているタグ" />
                  <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                     <content>
                        <FlowPane fx:id="assignedTagFlowPane" hgap="10.0" vgap="10.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </items>
      </SplitPane>
    </items>
</SplitPane>
